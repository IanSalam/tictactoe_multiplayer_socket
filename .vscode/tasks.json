{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill-server",
            "type": "shell",
            "command": "taskkill",
            "args": ["/F", "/IM", "tictacserver.exe"],
            "problemMatcher": []
        },
        {
            "label": "kill-client",
            "type": "shell",
            "command": "taskkill",
            "args": ["/F", "/IM", "tictacclient.exe"],
            "problemMatcher": []
        },
        {
            "label": "build-server",
            "type": "shell",
            "command": "${workspaceFolder}/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}/tictacserver.cpp",
                "-o",
                "${workspaceFolder}/tictacserver",
                "-lws2_32"
            ],
            "problemMatcher": ["$gcc"],
            "dependsOn": ["kill-server"]
        },
        {
            "label": "build-client",
            "type": "shell",
            "command": "${workspaceFolder}/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}/tictacclient.cpp",
                "-o",
                "${workspaceFolder}/tictacclient",
                "-lws2_32"
            ],
            "problemMatcher": ["$gcc"],
            "dependsOn": ["kill-client"]
        },
        {
            "label": "build-all",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-server",
                "build-client"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
